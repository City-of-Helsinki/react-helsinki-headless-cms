{
  "compilerOptions": {
    "module": "ES2020",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "moduleResolution": "Node",
    "target": "es2021",
    "lib": ["dom", "es2020"],
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "alwaysStrict": true
  },
  "include": ["src", "jest-setup.ts"],
  "compileOnSave": false,
  "buildOnSave": false
}
