{
  "compilerOptions": {
    "module": "ES2020",
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "moduleResolution": "Node",
    "target": "es2021",
    "lib": [
      "dom",
      "es2020"
    ],
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "jest-setup.ts"
  ],
  "exclude": [
    "dist",
    "**/__mocks__/*",
    "**/node_modules/*",
    "build",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}